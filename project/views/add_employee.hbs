<h1>Add Employee</h1>
<div>
  {{! CREATE form }}
  <form>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Date of Birth</th>
          <th>Phone Number</th>
          <th>Email Address</th>
          <th>Location ID</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="interactive_cell">
            <input type="text" name="update_first_name" id="update_first_name" placeholder="Enter First Name" required/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="update_last_name" id="update_last_name" placeholder="Enter Last Name" required/>
          </td>
          <td class="interactive_cell">
            <input type="date" name="update_date_of_birth" id="update_date_of_birth" required/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="update_phone_number" id="update_phone_number" placeholder="(000) 000-0000" required/>
          </td>
          <td class="interactive_cell">
            <input type="email" name="update_email_address" id="update_email_address" placeholder="Enter Email Address" required/>
          </td>
          <td class="interactive_cell">
            <select name="update_id_location" id="update_id_location" required>
              <option value="" disabled selected hidden>Select</option>
              {{#each locations}}
              <option value="{{this.id_location}}">{{this.id_location}} - {{this.name}}</option>
              {{/each}}
            </select>
          </td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button onclick="window.location.href='/employees'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
