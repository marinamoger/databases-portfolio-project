<h1>Invoices</h1>
<div>
  <table>
    <caption>Invoices table</caption>
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        {{#each invoices.[0]}}
        <th>
            {{@key}}
        </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each invoices}}
      <tr>
        <td>{{this.id_invoice}}</td>
        <td>{{this.id_customer}}</td>
        <td>{{this.id_employee}}</td>
        <td>{{this.id_location}}</td>
        <td>{{this.date}}</td>
        <td>{{this.total}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
    <div>
    <a href="/add_invoice">Add an invoice</a>
    <a href="/edit_invoice">Edit an invoice</a>
  </div>
  <table>
    <caption>Invoice detail table</caption>
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        {{#each invoices_services.[0]}}
        <th>
            {{@key}}
        </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each invoices_services}}
      <tr>
        <td>{{this.id_invoice_service}}</td>
        <td>{{this.id_invoice}}</td>
        <td>{{this.id_service}}</td>
        <td>{{this.sale_price}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div>
    <a href="/add_invoice_service">Add a service to an invoice</a>
    <a href="/edit_invoice_service">Edit a service in an invoice</a>
  </div>
</div>
