<h1>Locations</h1>
<div>
  <table>
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        {{#each locations.[0]}}
        <th>
            {{@key}}
        </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each locations}}
      <tr>
        <td>{{this.id_location}}</td>
        <td>{{this.name}}</td>
        <td>{{this.address}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
