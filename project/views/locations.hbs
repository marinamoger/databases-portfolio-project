<h1>Locations</h1>
<div>
  <table id="table_locations">
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        <th>Location ID</th>
        <th>Name</th>
        <th>Address</th>
        <th colspan="2" style="text-align: center;">Action</th>
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each locations}}
      <tr>
        <td>{{this.id_location}}</td>
        <td>{{this.name}}</td>
        <td>{{this.address}}</td>
        <td class="interactive_cell">
          <button onclick="window.location.href='/edit_location'">Edit</button>
        </td>
        <td class="interactive_cell">
          <button onclick="window.location.href='/locations'">Delete</button>
        </td>
      </tr>
      {{/each}}
      <tr>
        <td colspan="3"></td>
        <td colspan="2" style="text-align: center;" class="interactive_cell">
          <button onclick="window.location.href='/add_location'">Add</button>
        </td>
      </tr>
    </tbody>
  </table>
</div>
