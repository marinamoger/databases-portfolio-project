<h1>Delete Employee</h1>
{{#if employee}}
<div>
  {{! DELETE form }}
  <form method='POST' action="/employee/delete">
    <input type="hidden" name="delete_id_employee" id="delete_id_employee" value="{{employee.id_employee}}">
    <table id="table_delete_employee">
      <thead>
        <tr>
          <th>Employee ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Date of Birth</th>
          <th>Phone Number</th>
          <th>Email Address</th>
          <th>Location ID</th>
          <th>Location</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{employee.id_employee}}</td>
          <td>{{employee.first_name}}</td>
          <td>{{employee.last_name}}</td>
          <td>{{employee.date_of_birth}}</td>
          <td>{{employee.phone_number}}</td>
          <td>{{employee.email_address}}</td>
          <td>{{employee.id_location}}</td>
          <td>{{employee.name_location}}</td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/employees'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
{{else}}
<p>No such employee existed.</p>
{{/if}}
