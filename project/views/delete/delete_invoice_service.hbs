<h1>Delete Invoice Detail</h1>
{{#if invoice_service}}
<div>
  {{! DELETE form }}
  <form method='POST' action="/invoice_service/delete">
    <input type="hidden" name="delete_id_invoice_service" id="delete_id_invoice_service" value="{{invoice_service.id_invoice_service}}">
    <table id="table_delete_invoice_service">
      <thead>
        <tr>
          <th>Invoice Detail ID</th>
          <th>Customer</th>
          <th>Employee</th>
          <th>Date</th>
          <th>Invoice ID</th>
          <th>Service ID</th>
          <th>Service</th>
          <th>List Price</th>
          <th>Sale Price</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{invoice_service.id_invoice_service}}</td>
          <td>{{invoice_service.name_customer}}</td>
          <td>{{invoice_service.name_employee}}</td>
          <td>{{invoice_service.date}}</td>
          <td>{{invoice_service.id_invoice}}</td>
          <td>{{invoice_service.id_service}}</td>
          <td>{{invoice_service.name_service}}</td>
          <td>{{invoice_service.list_price}}</td>
          <td>{{invoice_service.sale_price}}</td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/invoices'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
{{else}}
<p>No such invoice detail existed.</p>
{{/if}}
