<h1>Delete Invoice</h1>
{{#if invoice}}
<div>
  {{! DELETE form }}
  <form method='POST' action="/invoice/delete">
    <input type="hidden" name="delete_id_invoice" id="delete_id_invoice" value="{{invoice.id_invoice}}">
    <table id="table_delete_invoice">
      <thead>
        <tr>
          <th>Invoice ID</th>
          <th>Customer ID</th>
          <th>Customer</th>
          <th>Employee ID</th>
          <th>Employee</th>
          <th>Location ID</th>
          <th>Location</th>
          <th>Date</th>
          <th>Total</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{invoice.id_invoice}}</td>
          <td>{{invoice.id_customer}}</td>
          <td>{{invoice.name_customer}}</td>
          <td>{{invoice.id_employee}}</td>
          <td>{{invoice.name_employee}}</td>
          <td>{{invoice.id_location}}</td>
          <td>{{invoice.name_location}}</td>
          <td>{{invoice.date}}</td>
          <td>{{invoice.total}}</td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/invoices'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
{{else}}
<p>No such invoice existed.</p>
{{/if}}
