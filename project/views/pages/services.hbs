<h1>Services</h1>
<div>
  <table id="table_services">
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        <th>Service ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>List Price</th>
        <th colspan="2" style="text-align: center;">Action</th>
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each services}}
      <tr>
        <td>{{this.id_service}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td class="interactive_cell">
          <button type="button" onclick="window.location.href='/edit_service?id={{this.id_service}}'">Edit</button>
        </td>
        <td class="interactive_cell">
          <button type="button" onclick="window.location.href='/delete_service?id={{this.id_service}}'">Delete</button>
        </td>
      </tr>
      {{/each}}
      <tr>
        <td colspan="4"></td>
        <td colspan="2" style="text-align: center;" class="interactive_cell">
          <button type="button" onclick="window.location.href='/add_service'">Add</button>
        </td>
      </tr>
    </tbody>
  </table>
</div>
