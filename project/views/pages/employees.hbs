<h1>Employees</h1>
<div>
  <table id="table_employees">
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Phone Number</th>
        <th>Email Address</th>
        <th>Location ID</th>
        <th>Location</th>
        <th colspan="2" style="text-align: center;">Action</th>
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each employees}}
      <tr>
        <td>{{this.id_employee}}</td>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.date_of_birth}}</td>
        <td>{{this.phone_number}}</td>
        <td>{{this.email_address}}</td>
        <td>{{this.id_location}}</td>
        <td>{{this.name_location}}</td>
        <td class="interactive_cell">
          <button type="button" onclick="window.location.href='/edit_employee?id={{this.id_employee}}'">Edit</button>
        </td>
        <td class="interactive_cell">
          <button type="button" onclick="window.location.href='/delete_employee?id={{this.id_employee}}'">Delete</button>
        </td>
      </tr>
      {{/each}}
      <tr>
        <td colspan="8"></td>
        <td colspan="2" style="text-align: center;" class="interactive_cell">
          <button type="button" onclick="window.location.href='/add_employee'">Add</button>
        </td>
      </tr>
    </tbody>
  </table>
</div>
