<h1>Add Invoice</h1>
<div>
  {{! CREATE form }}
  <form method='POST' action="/invoice/create">
    <table>
      <thead>
        <tr>
          <th>Customer ID *</th>
          <th>Employee ID *</th>
          <th>Location ID *</th>
          <th>Date *</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="interactive_cell">
            <select name="create_id_customer" id="create_id_customer" required>
              <option value="" disabled selected hidden>Select</option>
              {{#each customers}}
              <option value="{{this.id_customer}}">{{this.id_customer}} - {{this.first_name}} {{this.last_name}}</option>
              {{/each}}
            </select>
          </td>
          <td class="interactive_cell">
            <select name="create_id_employee" id="create_id_employee" required>
              <option value="" disabled selected hidden>Select</option>
              {{#each employees}}
              <option value="{{this.id_employee}}">{{this.id_employee}} - {{this.first_name}} {{this.last_name}}</option>
              {{/each}}
            </select>
          </td>
          <td class="interactive_cell">
            <select name="create_id_location" id="create_id_location" required>
              <option value="" disabled selected hidden>Select</option>
              {{#each locations}}
              <option value="{{this.id_location}}">{{this.id_location}} - {{this.name}}</option>
              {{/each}}
            </select>
          </td>
          <td class="interactive_cell">
            <input type="datetime-local" name="create_date" id="create_date" step="1" class="date_input" required/>
          </td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/invoices'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
  <p>Note: * indicates required fields.</p>
</div>
