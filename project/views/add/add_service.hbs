<h1>Add Service</h1>
<div>
  {{! CREATE form }}
  <form method='POST' action="/service/create">
    <table>
      <thead>
        <tr>
          <th>Name *</th>
          <th>Description</th>
          <th>List Price *</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="interactive_cell">
            <input type="text" name="create_name" id="create_name" placeholder="Enter Name" required/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="create_description" id="create_description" placeholder="Enter Description"/>
          </td>
          <td class="interactive_cell">
            <input type="number" name="create_price" id="create_price" step="0.01" placeholder="Enter Price" required/>
          </td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/services'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
  <p>Note: * indicates required fields.</p>
</div>
