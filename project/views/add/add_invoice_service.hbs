<h1>Add Invoice Detail</h1>
<div>
  {{! CREATE form }}
  <form method='POST' action="/invoice_service/create">
    <table>
      <thead>
        <tr>
          <th>Invoice ID</th>
          <th>Service ID</th>
          <th>Sale Price</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <td class="interactive_cell">
          <select name="create_id_invoice" id="create_id_invoice" required>
            <option value="" disabled selected hidden>Select</option>
            {{#each invoices}}
            <option value="{{this.id_invoice}}">{{this.id_invoice}} - {{this.name_customer}} - {{this.name_employee}} - {{this.date}}</option>
            {{/each}}
          </select>
        </td>
        <td class="interactive_cell">
          <select name="create_id_service" id="create_id_service" required>
            <option value="" disabled selected hidden>Select</option>
            {{#each services}}
            <option value="{{this.id_service}}">{{this.id_service}} - {{this.name}}</option>
            {{/each}}
          </select>
        </td>
        <td class="interactive_cell">
          <input type="number" name="create_sale_price" id="create_sale_price" placeholder="Enter or Use List Price"/>
        </td>
        <td class="interactive_cell">
          <button type="submit">Confirm</button>
        </td>
        <td class="interactive_cell">
          <button type="button" onclick="window.location.href='/invoices'">Cancel</a>
        </td>
      </tbody>
    </table>
  </form>
</div>
