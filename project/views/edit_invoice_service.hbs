<h1>Edit Invoice Detail</h1>
<div>
  {{! Update form }}
  <form>
    <table id="table_edit_invoice_detail">
      <thead>
        <tr>
          <th>Invoice ID</th>
          <th>Service ID</th>
          <th>Sale Price</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <td class="interactive_cell">
          <select name="update_id_invoice" id="update_id_invoice" required>
            <option value="" disabled selected hidden>Select</option>
            {{#each invoices}}
            <option value="{{this.id_invoice}}">{{this.id_invoice}}</option>
            {{/each}}
          </select>
        </td>
        <td class="interactive_cell">
          <select name="update_id_service" id="update_id_service" required>
            <option value="" disabled selected hidden>Select</option>
            {{#each services}}
            <option value="{{this.id_service}}">{{this.id_service}} - {{this.name}}</option>
            {{/each}}
          </select>
        </td>
        <td class="interactive_cell">
          <input type="number" name="update_sale_price" id="update_sale_price" placeholder="Use List Price" />
        </td>
        <td class="interactive_cell">
          <button type="submit">Confirm</button>
        </td>
        <td class="interactive_cell">
          <button onclick="window.location.href='/invoices'">Cancel</a>
        </td>
      </tbody>
    </table>
  </form>
</div>
