<h1>Services</h1>
<div>
  <table>
    <thead>
      {{! For the table header row, we print the DB attribute names }}
      <tr>
        {{#each services.[0]}}
        <th>
            {{@key}}
        </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{! For each row, print the id_location, name, and address }}
      {{#each services}}
      <tr>
        <td>{{this.id_service}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
