<h1>Edit Customer</h1>
{{#if customer}}
<div>
  {{! UPDATE form }}
  <form method='POST' action="/customer/update" >
    <input type="hidden" name="update_id_customer" id="update_id_customer" value="{{customer.id_customer}}">
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Date of Birth</th>
          <th>Phone Number</th>
          <th>Email Address</th>
          <th>Address</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="interactive_cell">
            <input type="text" name="update_first_name" id="update_first_name" value="{{customer.first_name}}" required/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="update_last_name" id="update_last_name" value="{{customer.last_name}}" required/>
          </td>
          <td class="interactive_cell">
            <input type="date" name="update_date_of_birth" id="update_date_of_birth" value="{{date_of_birth}}" class="date_input" required/>
          </td>
          <td class="interactive_cell">
            <input type="tel" name="update_phone_number" id="update_phone_number" pattern="\(\d{3}\) \d{3}-\d{4}|\d{10}" value="{{customer.phone_number}}" required/>
          </td>
          <td class="interactive_cell">
            <input type="email" name="update_email_address" id="update_email_address" value="{{customer.email_address}}"/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="update_address" id="update_address" value="{{customer.address}}"/>
          </td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/customers'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
{{else}}
<p>No such customer existed.</p>
{{/if}}
