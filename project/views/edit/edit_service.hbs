<h1>Edit Service</h1>
{{#if service}}
<div>
  {{! UPDATE form }}
  <form method='POST' action="/service/update">
    <input type="hidden" name="update_id_service" id="update_id_service" value="{{service.id_service}}">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>List Price</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="interactive_cell">
            <input type="text" name="update_name" id="update_name" value="{{service.name}}" required/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="update_description" id="update_description" value="{{service.description}}"/>
          </td>
          <td class="interactive_cell">
            <input type="number" name="update_price" id="update_price" step="0.01" value="{{service.price}}" required/>
          </td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/services'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
{{else}}
<p>No such service existed.</p>
{{/if}}
