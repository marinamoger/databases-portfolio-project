<h1>Edit Invoice Detail</h1>
{{#if invoice_service}}
<div>
  {{! Update form }}
  <form method='POST' action="/invoice_service/update">
    <table>
      <input type="hidden" name="update_id_invoice_service" id="update_id_invoice_service" value="{{invoice_service.id_invoice_service}}">
      <thead>
        <tr>
          <th>Invoice ID *</th>
          <th>Service ID *</th>
          <th>Sale Price</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <td class="interactive_cell">
          <select name="update_id_invoice" id="update_id_invoice" required>
            <option value="{{invoice_service.id_invoice}}" selected hidden>{{invoice_service.id_invoice}} - {{invoice_service.name_customer}} - {{invoice_service.name_employee}} - {{invoice_service.date}}</option>
            {{#each invoices}}
            <option value="{{this.id_invoice}}">{{this.id_invoice}} - {{this.name_customer}} - {{this.name_employee}} - {{this.date}}</option>
            {{/each}}
          </select>
        </td>
        <td class="interactive_cell">
          <select name="update_id_service" id="update_id_service" required>
            <option value="{{invoice_service.id_service}}" selected hidden>{{invoice_service.id_service}} - {{invoice_service.name_service}}</option>
            {{#each services}}
            <option value="{{this.id_service}}">{{this.id_service}} - {{this.name}}</option>
            {{/each}}
          </select>
        </td>
        <td class="interactive_cell">
          <input type="number" name="update_sale_price" id="update_sale_price" value="{{invoice_service.sale_price}}" placeholder="Enter or Use List Price"/>
        </td>
        <td class="interactive_cell">
          <button type="submit">Confirm</button>
        </td>
        <td class="interactive_cell">
          <button type="button" onclick="window.location.href='/invoices'">Cancel</a>
        </td>
      </tbody>
    </table>
  </form>
  <p>Note: * indicates required fields.</p>
</div>
{{else}}
<p>No such invoice detail existed.</p>
{{/if}}
