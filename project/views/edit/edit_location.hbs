<h1>Edit Location</h1>
{{#if location}}
<div>
  {{! UPDATE form }}
  <form method='POST' action="/location/update">
    <input type="hidden" name="update_id_location" id="update_id_location" value="{{location.id_location}}">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th colspan="2" style="text-align: center;">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="interactive_cell">
            <input type="text" name="update_name" id="update_name" value="{{location.name}}" required/>
          </td>
          <td class="interactive_cell">
            <input type="text" name="update_address" id="update_address" value="{{location.address}}" required/>
          </td>
          <td class="interactive_cell">
            <button type="submit">Confirm</button>
          </td>
          <td class="interactive_cell">
            <button type="button" onclick="window.location.href='/locations'">Cancel</a>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
{{else}}
<p>No such location existed.</p>
{{/if}}
